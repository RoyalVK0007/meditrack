{
  "name": "meditrack-hospital",
  "version": "2.0.1",
  "description": "Hospital Management System",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "node backend/server.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on https://localhost:3000 && electron .\"",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --linux",
    "dist": "npm run build-all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "build": {
    "appId": "com.meditrack.hospital",
    "productName": "MediTrack Hospital Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/**/*",
      "sql/**/*",
      "reports/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "sql",
        "to": "sql"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "frontend/assets/logo.ico",
      "publisherName": "MediTrack Systems"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "frontend/assets/logo.png",
      "category": "Office",
      "maintainer": "MediTrack Systems",
      "description": "Hospital Management System for healthcare facilities"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "frontend/assets/logo.icns",
      "category": "public.app-category.medical"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "frontend/assets/logo.ico",
      "uninstallerIcon": "frontend/assets/logo.ico",
      "installerHeaderIcon": "frontend/assets/logo.ico"
    },
    "deb": {
      "depends": ["mysql-server"]
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^7.0.10",
    "otp-generator": "^4.0.1",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "wait-on": "^7.2.0"
  }
}
